@model InfoTrackWebApp.Models.SEOForm;
@{
    ViewData["Title"] = "URL SEO Ranking v1.0";
}

<div>
    <div class="text-center">
        <h1>URL SEO Ranking v1.0</h1>
        <p>
            This utility allows you to find the Google rankings of given keywords for a given URL 
        </p>
    </div>

    @using (@Html.BeginForm("SEOResults", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.Url, "URL") @Html.TextBoxFor(model => model.Url, new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger col-md-3" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Keywords) @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control" } ) @Html.ValidationMessageFor(model => model.Keywords, "", new { @class = "text-danger col-md-3" })
        </div>
        
        <div class="text-center">
            <input name="findrankings" type="submit" value="Find rankings" class="btn btn-primary" />
        </div>
    }
</div>
